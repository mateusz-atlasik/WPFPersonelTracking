<Window x:Class="WPFPersonelTracking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFPersonelTracking"
        mc:Ignorable="d"
        Title="Perseusz"
        Name="PersonelMainWindow"
        WindowStartupLocation="CenterScreen"
        Height="540"
        Width="1200"
        FontSize="24"
        FontWeight="Bold"
        Loaded="Window_Loaded"
        Background="#FFECBF7D"
        Icon="/people-group.png"
        ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Image Source="/Logo.png" />
        <ContentControl Grid.Column="1"
                        Content=""
                        Grid.Row="1"
                        Grid.RowSpan="8"
                        Height="NaN"
                        Width="NaN" />
        <Label x:Name="lblWindowName"
               Grid.Column="1"
               Content="Window Name"
               HorizontalAlignment="Center"
               Margin="235,0,0,0"
               VerticalAlignment="Center"
               FontSize="24" />
        <StackPanel Grid.Row="1" Margin="0,2,0,0">
            <Button Grid.Row="1"
                    Name="btnEmployee"
                    Height="60"
                    Width="250"
                    HorizontalAlignment="Left"
                    Background="#FFEFB053">
                <Grid Width="230">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Image x:Name="EmployeeImage"
                           HorizontalAlignment="Left"
                           Width="auto"
                           Height="auto"
                           Margin="0,5,10,0"
                           Source="/Employee.png" />
                    <TextBlock Text="Kołhoźnik"
                               Grid.Column="1"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center" />
                </Grid>
            </Button>
        </StackPanel>
        <StackPanel Grid.Row="2"
                    Margin="0,2,0,0">
            <Button Grid.Row="2"
                    Name="btnTask"
                    Height="60"
                    Width="250"
                    HorizontalAlignment="Left"
                    Background="#FFEFB053">
                <Grid Width="230">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Image x:Name="TaskImage"
                           HorizontalAlignment="Left"
                           Width="auto"
                           Height="auto"
                           Margin="0,5,10,0"
                           Source="/Task.png" />
                    <TextBlock Text="Zadanie"
                               Grid.Column="1"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center" />
                </Grid>
            </Button>
        </StackPanel>
        <StackPanel Grid.Row="3"
                    Margin="0,2,0,0">
            <Button Grid.Row="3"
                    Name="btnSalary"
                    Height="60"
                    Width="250"
                    HorizontalAlignment="Left"
                    Background="#FFEFB053">
                <Grid Width="230">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Image x:Name="SalaryImage"
                           HorizontalAlignment="Left"
                           Width="auto"
                           Height="auto"
                           Margin="0,5,10,0"
                           Source="/Salary.png" />
                    <TextBlock Text="Pinionżki"
                               Grid.Column="1"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center" />
                </Grid>
            </Button>
        </StackPanel>
        <StackPanel Grid.Row="4"
                    Margin="0,2,0,0">
            <Button Grid.Row="4"
                    Name="btnPermission"
                    Height="60"
                    Width="250"
                    HorizontalAlignment="Left"
                    Background="#FFEFB053">
                <Grid Width="230">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Image x:Name="PermissionImage"
                           HorizontalAlignment="Left"
                           Width="auto"
                           Height="auto"
                           Margin="0,5,10,0"
                           Source="/Permission.png" />
                    <TextBlock Text="Uprawnienia"
                               Grid.Column="1"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center" />
                </Grid>
            </Button>
        </StackPanel>
        <StackPanel Grid.Row="5"
                    Margin="0,2,0,0">
            <Button Grid.Row="5"
                    Name="btnDepartment"
                    Height="60"
                    Width="250"
                    HorizontalAlignment="Left"
                    Background="#FFEFB053">
                <Grid Width="230">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Image x:Name="DepartmentImage"
                           HorizontalAlignment="Left"
                           Width="auto"
                           Height="auto"
                           Margin="0,5,10,0"
                           Source="/Department.png" />
                    <TextBlock Text="Działy"
                               Grid.Column="1"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center" />
                </Grid>
            </Button>
        </StackPanel>
        <StackPanel Grid.Row="6"
                    Margin="0,2,0,0">
            <Button Grid.Row="6"
                    Name="btnPosition"
                    Height="60"
                    Width="250"
                    HorizontalAlignment="Left"
                    Background="#FFEFB053">
                <Grid Width="230">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Image x:Name="PositionImage"
                           HorizontalAlignment="Left"
                           Width="auto"
                           Height="auto"
                           Margin="0,5,10,0"
                           Source="/Position.png" />
                    <TextBlock Text="Stanowisko"
                               Grid.Column="1"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center" />
                </Grid>
            </Button>
        </StackPanel>
        <StackPanel Grid.Row="7"
                    Margin="0,2,0,0">
            <Button Grid.Row="7"
                    Name="btnLogout"
                    Height="60"
                    Width="250"
                    HorizontalAlignment="Left"
                    Background="#FFEFB053">
                <Grid Width="230">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Image x:Name="LogoutImage"
                           HorizontalAlignment="Left"
                           Width="auto"
                           Height="auto"
                           Margin="0,5,10,0"
                           Source="/Position.png" />
                    <TextBlock Text="Wyloguj"
                               Grid.Column="1"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center" />
                </Grid>
            </Button>
        </StackPanel>
        <StackPanel Grid.Row="8"
                    Margin="0,2,0,0">
            <Button Grid.Row="8"
                    Name="btnExit"
                    Height="60"
                    Width="250"
                    HorizontalAlignment="Left"
                    Background="#FFEFB053">
                <Grid Width="230">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Image x:Name="ExitImage"
                           HorizontalAlignment="Left"
                           Width="auto"
                           Height="auto"
                           Margin="0,5,10,0"
                           Source="/Position.png" />
                    <TextBlock Text="Wyjdź"
                               Grid.Column="1"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center" />
                </Grid>
            </Button>
        </StackPanel>

    </Grid>
</Window>

